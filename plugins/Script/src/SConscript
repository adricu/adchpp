Import('dev source_path')

env, target, sources = dev.prepare_build(source_path, 'Script')
env['SHLIBPREFIX'] = ''

if 'gcc' in env['TOOLS']:
	env['GchSh'] = env.GchSh('stdinc.h')[0]
		
env.Append(CPPPATH = ['#/lua/', '.', '#'])
env.Append(LIBS = ['adchpp', 'alua'])

ret = env.SharedLibrary(target, sources)

Return('ret')
